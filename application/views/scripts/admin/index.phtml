        print "<td class='l_actions'>";
        print "<a href='#' onclick=\"confirmRedirect('" . $this->url(array('controller'=>'admin','action' => 'userdelete')) . "?user=" . $user->getId() . "','".sprintf($this->translate('Really delete user %1$s?'),$user->getEmail())."')\">".$this->translate('delete')."</a>&nbsp;";
