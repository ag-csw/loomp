        	print "<a href='" . $this->url(array('controller'=>'admin','action' => 'useractivate')) . "?user=" . $user->getId() . "'>".$this->translate('activate')."</a>&nbsp;";
		else
        	print "<a href='" . $this->url(array('controller'=>'admin','action' => 'userdeactivate')) . "?user=" . $user->getId() . "'>".$this->translate('deactivate')."</a>&nbsp;";	
        
        if (!$user->isAdmin()) 
        	print "<a href='" . $this->url(array('controller'=>'admin','action' => 'userpromote')) . "?user=" . $user->getId() . "'>".$this->translate('promote')."</a>";
        else 
        	print "<a href='" . $this->url(array('controller'=>'admin','action' => 'userdemote')) . "?user=" . $user->getId() . "'>".$this->translate('demote')."</a>";
        	
        print "</td>";
        print "</tr>";
 	}
